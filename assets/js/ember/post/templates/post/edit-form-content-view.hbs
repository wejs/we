<div class="form-group">
  {{we-wysiwyg-editor name="body" value=body onPaste="onPasteInBody"}}
</div>

<div class="form-group attach-options">

  {{#unless shareImages}}
    <button {{action 'openShareImage'}} type="button" class="btn btn-xs btn-default">
      <i class="glyphicon glyphicon-picture"></i> {{t "Image"}}
    </button>
  {{/unless}}
  <button {{action 'openShareVideo'}} type="button" class="btn btn-xs btn-default">
    <i class="glyphicon glyphicon-facetime-video"></i> {{t "Video"}}
  </button>
</div>

<div class="form-group">
  <div class='row'>
  {{#each videos}}
    <div class='col-md-6'>
      {{we-video-preview url=this onRemove="onRemoveVideo"}}
    </div>
  {{/each}}
  </div>
</div>

{{#if shareImages}}
  <div class="form-group">
    {{#unless files}}
    <div class="form-group row add-images">
      <label for="addImages" class="col-sm-2 control-label">{{t "Attach images"}}</label>
      <div class="col-sm-10">
        {{file-upload files=filesNew}}
      </div>
    </div>
    {{/unless}}
    <div class="form-group images-preview">
      <div class="row">
        {{#each files}}
          <div class="col-xs-6 col-md-3">
            {{we-image-preview file=this onRemove='onRemoveImage'}}
          </div>
        {{/each}}
      </div>
    </div>
  </div>
{{/if}}

<div class="footer">
  {{#if enableShareInput}}
    <div class="form-group">
      <div class="input-group">
        <label for="toId" class="input-group-addon">{{t "To"}}:</label>
        {{we-select2 shareWithOptions=App.currentUser.shareWithOptions}}
      </div>
    </div>
  {{/if}}

  <div class="actions">
    <button type="submit" class="btn btn-primary">
      <span class="glyphicon glyphicon-ok"></span> {{t "Share"}}
    </button>
    <button type="button" {{action 'cancel'}} class="btn btn-default cancel"> {{t "Cancel"}}</button>
  </div>
</div>
